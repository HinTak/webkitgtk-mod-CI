+            {"hueRotate", SkSVGFeColorMatrixType::kHueRotate},
+            {"luminanceToAlpha", SkSVGFeColorMatrixType::kLuminanceToAlpha},
+    };
+
+    return this->parseEnumMap(gTypeMap, type) && this->parseEOSToken();
+}
