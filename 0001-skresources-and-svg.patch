+bool SkSVGAttributeParser::parseFuncIRI(SkSVGFuncIRI* iri) {
+    return this->parseParenthesized("url", [this](SkSVGFuncIRI* iriResult) -> bool {
+        SkSVGIRI iri;
+        if (this->parse(&iri)) {
+            *iriResult = SkSVGFuncIRI(std::move(iri));
+            return true;
+        }
+        return false;
+    }, iri);
+}
